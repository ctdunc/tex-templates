\newlength{\logowidth}
\setlength{\logowidth}{0cm}

%insert logo to left
\newcommand{\logoleft}[1]{
    \newcommand{\insertlogo}{#1}
    \settowidth{\logowidth}{\insertlogo}
    \addtolength{\logowidth}{10ex}
}
% ========= 
% Define Beamer Fonts
% ========= 
\setbeamerfont{headline title}{size=\fontsize{64}{36},series=\bfseries}
\setbeamerfont{headline author}{size=\fontsize{34}{12}}

\setbeamerfont{block title}{size=\fontsize{41}{15}, series=\bfseries}
\setbeamerfont{block body}{size=\fontsize{23}{9},series=\bfseries,shape=\itshape}

\setbeamerfont{footline disclaimer}{size=\fontsize{13.5}{9},series=\bfseries,shape=\itshape}
\setbeamerfont{footline conference}{size=\fontsize{13.5}{9},shape=\itshape}

% ========= 
% Headline 
% ========= 
\setbeamertemplate{headline}
{
    \begin{beamercolorbox}{headline}
        \begin{columns}
            \begin{column}{\logowidth}
                \vskip5ex
                \ifdefined\insertlogo
                \vspace*{\fill}
                \hspace{10ex}
                \raggedright
                \insertlogo
                \vspace*{\fill}
                \else\fi
            \end{column}
            \begin{column}{\dimexpr\paperwidth-\logowidth-\logowidth}
                \usebeamerfont{headline}
                \vskip3ex
                \centering
                {\usebeamerfont{headline title}\inserttitle\\[0.5ex]}
                {\usebeamerfont{headline author}\usebeamercolor[fg]{headline author}\insertauthor\\[0.5ex]}
            \end{column}
            \begin{column}{\logowidth}
            \end{column}
        \end{columns}
    \end{beamercolorbox}
}

% =========
% Block
% =========
\setbeamertemplate{block begin}
{
    \usebeamerfont{block body}
    \begin{beamercolorbox}[colsep*=0ex]{block body}
        \setlength{\parskip}{1ex}
}

\setbeamertemplate{block end}{
    \end{beamercolorbox}
    \begin{beamercolorbox}[colsep=0ex,dp=2ex,center]{block title}
        \vskip0pt
        \usebeamerfont{block title}\insertblocktitle
    \end{beamercolorbox}
}

% ========= 
